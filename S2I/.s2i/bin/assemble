#!/bin/bash -e
#
# S2I assemble script for the 'amsokol/golang-openshift:1.8.0' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

if [[ "$1" == "-h" ]]; then
	# If the 'test1' assemble script is executed with '-h' flag,
	# print the usage.
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
#
if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
  echo "---> Restoring build artifacts..."
  mv /tmp/artifacts/. ./
fi

echo "Root package is \"$ROOT\""

SOURCE_CODE="$GOPATH/src/$ROOT"
echo "---> Installing application source in folder \"$SOURCE_CODE\""
mkdir -p $SOURCE_CODE
cd $SOURCE_CODE
cp -Rf /tmp/src/. ./

# echo "---> Downloading dependencies..."
# go get -v ./...

echo "---> Building application from source"
go build -o goapplication4run
